{
    "type": "object",
    "required": ["name", "age", "years_of_coding", "knowledge",
                 "int", "env", "os"],
    "properties": {
        "name": {
            "type": "string",
            "minLength": 2,
            "maxLength": 100
        },
        "age": {
            "type": "string",
            "pattern": "^[0-9]{1,2}$"
        },
        "years_of_coding": {
            "type": "string",
            "pattern": "^[0-9]{1,2}$"
        },
        "knowledge": {
            "type": "string",
            "pattern": "^[0-4]$"
        },
        "int": {
            "oneOf": [{
                "type": "array",
                "items": {
                    "type": "string",
                    "enum": ["frontend", "backend", "other"]
                },
                "minItems": 1,
                "maxItems": 3,
                "uniqueItems": true
            }, {
                "enum": ["frontend", "backend", "other"]
            }]
        },
        "env": {
            "enum": ["ide", "editor", "ed"]
        },
        "os": {
            "enum": ["linux", "macos", "wsl", "windows"]
        },

        "languages": {
            "oneOf": [{
                "type": "array",
                "items": {
                    "type": "string"
                },
                "minItems": 1,
                "maxItems": 10,
                "uniqueItems": true
            }, {
                "type": "string"
            }]
        },
        "lang_other": {
            "type": "string",
            "maxLength": 100
        },
        "comment": {
            "type": "string",
            "maxLength": 280
        }
    }
}
